.interest{
  width: 94%;
  background-color: white;
  margin-left: 3%;
  border-radius: 10px;
  margin-top: 10rpx;
  
}
.interest-car{
  padding: 25rpx 25rpx;
  display: flex;
  justify-content: space-between;
}
.interest-car text:first-child{
  font-size: 30rpx;
  font-weight: bold;
}
.interest-car text:last-child{
  color: #B93321;
  font-size: 27rpx;
  font-weight: bold;
}
.interest-books{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 20rpx;
  justify-content: space-around;
}
.interest-book{
  text-align: center;
  width: 145rpx;
}
.interest-book-img{
  width: 100%;
  height: 200rpx;
  /* margin: 0 10rpx */
}
.interest-book-name{
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.custom-class{
  margin-left: 47%;
}