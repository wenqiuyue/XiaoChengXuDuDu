.container {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -2;
  bottom: 0;
  padding-bottom:75rpx; 
}

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  top: 0;
}
@keyframes animtran {
  from {
    transform: rotateZ(0deg);
  }

  to {
    transform: rotateZ(360deg);
  }
}

@keyframes animtrans {
  from {
    transform: rotateZ(360deg);
  }

  to {
    transform: rotateZ(0deg);
  }
}

@-webkit-keyframes animtran {
  from {
    transform: rotateZ(0deg);
  }

  to {
    transform: rotateZ(360deg);
  }
}

@-webkit-keyframes animtrans {
  from {
    transform: rotateZ(360deg);
  }

  to {
    transform: rotateZ(0deg);
  }
}

.advert {
  width: 600rpx;
  height: 600rpx;
