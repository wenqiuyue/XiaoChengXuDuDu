/* pages/MyReceivedLike/MyReceivedLike.wxss */
page{
   background-color: white;
}
/*显示已关注部分样式*/
.MyReceivedLike{
   border-bottom: 3rpx solid #f0f0f0; 
   width: 100%;
   height: 130rpx;
   margin-top: 5rpx;
   display:flex;
   justify-content:space-between;
   align-items: center;
}
.MyRLikeIcon{
  width:90rpx;
  height:90rpx;
  border-radius: 50%; /* 使头像的图片变为圆形 */
  overflow: hidden;
}
.MyRLikeLeft{
  display: flex;
}
.MyRLike-avater{
  padding-right: 20rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}
.MyRLikeDes{
  display: flex;
  flex-direction: column;
  height: 90rpx;
  align-items: center;
  margin-top: 20rpx;
}
.MyRLike-name{
  font-weight: 700;
  font-size: 30rpx;
  width: 450rpx;
  height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/*喜欢了你的图片*/
.MyRLikesEvent{
  color: #6a6a6a;
  width: 450rpx;
  height: 45rpx;
  font-size: 24rpx;
  padding-top: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/*时间*/
.MyRLikesTime{
  font-size: 24rpx;
  height: 45rpx;
}
.MyRLikesword{
  padding-left: 5rpx;
  height: 45rpx;
}

.MyRLikeRight{
  display: flex;
}
/* 右侧图片的样式 */
.MyRLike-RightIcon{  
  width:90rpx;
  height: 90rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  overflow: hidden;
}