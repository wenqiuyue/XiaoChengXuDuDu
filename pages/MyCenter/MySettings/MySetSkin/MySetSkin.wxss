/* pages/skin/skin.wxss */
.container{
  width: 100%;
}
/**轮播**/
.lunbor{
  width: 100%;
  height: 350rpx;
}
.lunbor swiper-item,.lunbor swiper-item image{
  width: 100%;
  height: 100%;
}
/**中间分类**/
.content_fenlei{
  width: 100%;
  height: 360rpx;
  margin-top: 10rpx;
  background-color:white;
}
.content_fenlei01,.content_fenlei02{
  width: 100%;
  height: 180rpx;
  display: flex;
}
.item{
  flex: 1;
}
.item image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  display: block;
  margin: 25rpx auto 10rpx auto;
}
.item text{
 display: block;
 font-size: 30rpx;
 text-align: center;
}
/**新货来袭**/
.content_xinhuo{
  margin-top: 10rpx;
  height: 830rpx;
  background-color: white;
  padding-top: 10rpx;
}
.content_xinhuo_title{
  margin-left: 40rpx;
  margin-bottom: 10rpx;
  height: 50rpx;
  display: flex;
  line-height: 50rpx;
  border-left: 10rpx solid #0ea6cf;
}
.content_xinhuo_title text{
  color: #0ea6cf;
  font-size:32rpx;
  margin-left: 10rpx;
}
.content_xinhuo .inner{
  display: flex;
  flex-wrap: wrap;
}
.item2{
  width: 33.33333%;
}
.item2 image{
  display: block;
  width: 200rpx;
  height: 250rpx;
  margin: 15rpx auto;
}
.item2 text{
  font-size: 30rpx;
  display: block;
  text-align: center;
}